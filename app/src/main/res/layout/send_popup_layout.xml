<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="20dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/send"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/item_send_sms_bg1">

        <ImageView
            android:id="@+id/ic_send"
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ic_send"/>
        <TextView
            android:id="@+id/tv_send"
            android:gravity="center"
            android:textColor="@color/sendTvColor1"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/send"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:id="@+id/receiver"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/item_receiver_sms_bg">

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ic_receiver"/>
        <TextView
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/receiver"/>

    </LinearLayout>

</LinearLayout>