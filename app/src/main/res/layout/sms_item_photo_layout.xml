<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/sms_rl"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.fake.sms.prank.view.CircleImageView
            android:id="@+id/item_sms_head"
            android:layout_marginLeft="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:layout_marginTop="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_sms_head"
            android:padding="5dp"
            android:background="@drawable/item_receiver_sms_bg"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:id="@+id/item_sms_left_iv"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <ImageView
        android:gravity="right"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:background="@drawable/item_send_sms_bg1"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/item_sms_right_iv"
        android:layout_marginLeft="15dp"/>

</RelativeLayout>